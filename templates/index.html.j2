<body class="flex flex-col min-h-screen ">
    {% block header %}
    <header class="bg-gray-900 py-4">
        <div class="container mx-auto flex justify-center">
            <img src="{{url_for('static',filename='images/logo.png')}}" alt="Logo" class="w-32">
        </div>
