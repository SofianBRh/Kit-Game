    {% block main %}

    <div class="main   ">
        <div class="container mx-auto">
            <form class="my-5" id="predict_form" action="/" method="POST" enctype="multipart/form-data">
                <div class="flex justify-center">
                    <div class="w-1/3 px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                            for="input-number">
                            Nombre :
                        </label>
                        <input
                            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                            id="input-number" type="number" name="number">
                    </div>
                </div>
                <div class="flex justify-center">
                    <div class="w-1/3 px-3">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                            for="input-file">
                            Fichier :
                        </label>
                        <div class="flex items-center justify-between">
                            <label
                                class="flex-1 rounded-lg py-2 px-3 border border-gray-400 border-dashed cursor-pointer hover:bg-gray-100">
                                <span id="filename" class="block text-gray-700 text-sm">Choisir un fichier</span>
                                <input id="file" type="file" class="hidden" id="input-file" name="file">
                            </label>
                        </div>
                    </div>
                </div>
                <div class="flex justify-center mt-6">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Envoyer
                    </button>
                </div>
            </form>

            <p class="border">
            <div id="graph" class="mb-5">

            </div>
